---
import { sluglify } from "src/utils/sluglify"

const { name = 'View All', activeCategory } = Astro.props
const currentPath = Astro.url.pathname
const categoryName = sluglify(name.toLowerCase())

const isActive = activeCategory?.toLocaleLowerCase() === categoryName || (currentPath === '/' && name === 'View All')

---

<a
    href={name === 'View All' ? '/' : sluglify(`/category/${ categoryName }/1`)}
    class={` 
        btn text-[10px] text-primary
        ${ isActive && 'bg-neutral-200 dark:bg-neutral-700'}
    `}
>
    { name }
</a>